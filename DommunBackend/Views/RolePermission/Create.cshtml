@model List<DommunBackend.DomainLayer.DTOs.RoleClaimsDto>
@{
    ViewData["Title"] = "Manage";    
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Permisos por Rol</h2>
            Adicionar/Remover permisos por Rol / @ViewBag.RoleName.
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].ClaimType" />
                    <input type="hidden" asp-for="@Model[i].ClaimValue" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">                        
                        @($"{Model[i].ClaimType} {Model[i].ClaimValue}")
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <a asp-action="EditRole" asp-route-id="@ViewBag.roleId"
               class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>
</form>